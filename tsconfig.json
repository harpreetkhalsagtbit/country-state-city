{
  "compilerOptions": {
    "target": "es6",
    "declaration": true,
    "module": "es6",
    "noImplicitAny": true,
    "lib": ["es6"],
    "resolveJsonModule": true,
    "outDir": "./dist",
    "strict": true,
    "esModuleInterop": true,
    "moduleResolution": "node"
  },
  "exclude": [
    "node_modules",
    "dist"
  ]
}
